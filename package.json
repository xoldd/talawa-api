	"main": "./dist/startServer.js",
	"name": "talawa-api",
	"packageManager": "pnpm@9.11.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/PalisadoesFoundation/talawa-api"
	},
	"scripts": {
		"apply_drizzle_migrations": "drizzle-kit migrate",
		"build_production": "swc ./src/ -d ./dist/ -q --ignore \"**/*.spec.ts,**/*.test.ts\" --strip-leading-paths",
		"check_code_quality": "biome check --error-on-warnings",
		"check_drizzle_migrations": "drizzle-kit check",
		"check_graphql": "gql.tada generate output && gql.tada doctor && gql.tada check",
		"check_type_errors": "tsc",
		"drop_drizzle_migrations": "drizzle-kit drop",
		"fix_code_quality": "biome check --error-on-warnings --write",
		"generate_drizzle_migrations": "drizzle-kit generate",
		"generate_graphql_schema": "tsx ./scripts/generate_graphql_schema.ts",
		"start_development": "tsx watch --env-file=./.env --inspect=${API_DEBUGGER_HOST:-127.0.0.1}:${API_DEBUGGER_PORT:-9229} ./src/startServer.ts",
		"push_drizzle_schema": "drizzle-kit push",
		"prestart_production": "pnpm build_production",
		"run_api_tests": "vitest",
		"start_production": "node --env-file=./.env ./dist/startServer.js",
		"upgrade_drizzle_metadata": "drizzle-kit up"
	},
	"type": "module",
	"version": "1.0.0"
}
